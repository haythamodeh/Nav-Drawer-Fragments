<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/galleryItem1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Item 1"
        app:layout_constraintBottom_toTopOf="@+id/galleryItem2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/galleryItem2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Item 2"
        app:layout_constraintBottom_toTopOf="@+id/galleryItem3_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryItem1_btn" />

    <Button
        android:id="@+id/galleryItem3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery Item 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryItem2_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>